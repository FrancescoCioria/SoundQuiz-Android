<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body"
            android:background="@drawable/dialog_layout_cinema"
            android:padding="16dp"
            android:layout_margin="20dp"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/removeWrongLetters"
                android:gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:id="@+id/header">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have:"
                    android:textSize="18sp"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/coins_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:layout_marginLeft="3dp"
                    android:textSize="18sp"
                    android:id="@+id/coinsLeft"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/removeWrongLetters"
                android:padding="7dp"
                android:layout_below="@+id/header"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_cinema">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove wrong letters\n(up to 6)"
                    android:gravity="center_horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/coins"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="#bbc6fa" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:id="@+id/coins"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/coins_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="60"
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:textColor="#bbc6fa"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/revealFirstLetters"
                android:padding="7dp"
                android:layout_below="@+id/removeWrongLetters"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_cinema">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reveal first letters"
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:textColor="#bbc6fa"
                    android:layout_toLeftOf="@+id/coins"
                    android:layout_alignParentLeft="true"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:id="@+id/coins"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/coins_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="40"
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:textColor="#bbc6fa"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/revealOneLetter"
                android:padding="7dp"
                android:layout_below="@+id/revealFirstLetters"
                android:layout_marginTop="10dp"

                android:background="@drawable/button_cinema">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reveal one letter"
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:textColor="#bbc6fa"
                    android:layout_toLeftOf="@+id/coins"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:id="@+id/coins">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/coins_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="20"
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:textColor="#bbc6fa"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/askForHelp"
                android:padding="7dp"
                android:layout_below="@+id/revealOneLetter"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_cinema">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ask your friends for help"
                    android:gravity="center_horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/coins"
                    android:textColor="#bbc6fa"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:id="@+id/coins">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/coins_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0  "
                        android:layout_marginLeft="3dp"
                        android:textSize="16sp"
                        android:textColor="#bbc6fa"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttonCancel"
            android:layout_alignParentRight="true"
            android:src="@drawable/button_cancel"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</RelativeLayout>