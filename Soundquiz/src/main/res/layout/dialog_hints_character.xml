<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4000000"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body"
            android:background="@drawable/dialog_layout_character"
            android:padding="16dp"
            android:layout_margin="15dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/removeWrongLetters"
                android:text="Remove wrong letters\n(up to 6)"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_character"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/askForHelp"
                android:layout_alignLeft="@+id/askForHelp"
                android:textColor="#fdafb1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/revealFirstLetters"
                android:text="Reveal first letters"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_character"
                android:layout_below="@+id/removeWrongLetters"
                android:layout_alignRight="@+id/askForHelp"
                android:textColor="#fdafb1"
                android:layout_alignLeft="@+id/askForHelp"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/revealOneLetter"
                android:text="Reveal one letter"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_character"
                android:layout_below="@+id/revealFirstLetters"
                android:layout_alignRight="@+id/askForHelp"
                android:layout_alignLeft="@+id/askForHelp"
                android:textColor="#fdafb1"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/askForHelp"
                android:text="Ask your friends for help"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_character"
                android:layout_below="@+id/revealOneLetter"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:textColor="#fdafb1"
                android:layout_marginTop="10dp" />


        </RelativeLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/buttonCancel"
            android:layout_alignParentRight="true"
            android:src="@drawable/button_cancel"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

</RelativeLayout>