<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mosquitolabs.soundquiz.PackageActivity"
    android:background="@drawable/simpsons_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/body"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewTV"
            android:src="@drawable/tv_simpsons_with_shadow"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transparentBlackLayer"
        android:background="#8c000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/topBar"
        android:paddingRight="5dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cinema"
            android:id="@+id/textViewLevel"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 10"
            android:id="@+id/textViewQuizDone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#bebebe" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"

            >


            <ImageView
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@drawable/arrow_left"
                android:scaleType="fitXY"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:id="@+id/back"
                android:textColor="@android:color/secondary_text_dark"
                android:textSize="15sp"
                android:layout_marginLeft="2dp" />


        </LinearLayout>


    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/levelListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topBar"
        android:dividerHeight="15dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:overScrollMode="never"
        android:divider="@android:color/transparent"
        android:headerDividersEnabled="false" />
</RelativeLayout>
