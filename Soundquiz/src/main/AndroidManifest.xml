<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mosquitolabs.soundquiz" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="userPortrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mosquitolabs.soundquiz.LevelActivity"
            android:label="@string/title_activity_level" />
        <activity
            android:name="com.mosquitolabs.soundquiz.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mosquitolabs.soundquiz.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.mosquitolabs.soundquiz.PackageActivity"
            android:label="@string/title_activity_package" />
        <activity
            android:name="com.mosquitolabs.soundquiz.PackageListActivity"
            android:label="@string/title_activity_package_list" />
        <activity
            android:name="com.mosquitolabs.soundquiz.WinActivity"
            android:label="@string/title_activity_win" />
        <activity
            android:name="com.mosquitolabs.soundquiz.MusicQuizActivity"
            android:label="@string/title_activity_music_quiz" >
        </activity>
    </application>

</manifest>
